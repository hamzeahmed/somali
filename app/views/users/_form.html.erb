<div class="wrapper">
  <div class="header header-filter" style="background-image: url('<%= image_path("material_kit/bg2.jpg") %>');"></div>
	<div class="main main-raised">
		<div class="section section-basic">
	    <div class="container">
	      <h1 align = center>Create User</h1>
        <%= render 'shared/errors' , obj: @user%>
        <div class="row">
          <div class="col-xs-12">
            <%= form_for(@user, :html => {class: 'form-horizontal', role: 'form' }) do |f| %>
            <div class="form-group">
              <div class="control-label col-sm-2">
                <%= f.label :username %>
              </div>
              <div class="col-sm-8">
                <%= f.text_field :username , class:"form-control" , placeholder: "Enter Your User Name", autofocus: true%> 
              </div>
            </div>
            
            <div class="form-group">
              <div class="control-label col-sm-2">  
                <%= f.label :email %>
              </div>
              <div class="col-sm-8">
                <%= f.email_field :email ,  class:"form-control" ,placeholder: "Enter You Email" %>
              </div>
            </div>
            
            <div class="form-group">
              <div class="control-label col-sm-2">  
                <%= f.label :password %>
              </div>
              <div class="col-sm-8">
                <%= f.password_field :password ,  class:"form-control"  ,placeholder: "Enter You Password" %>
              </div>
            </div>
                
            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit(@user.new_record? ? "Sing up" : "Update Account ", class:'btn btn-primary btn-large') %>
              </div>
            </div>
            <div class="col-sm-4 col-sm-offset-4">
             [ <%= link_to "Cancel request and return to articles" , pages_path%> ]
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>  