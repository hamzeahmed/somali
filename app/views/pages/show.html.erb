<%= render 'layouts/navigation'%>
<div class="wrapper">
  <div class="header header-filter" style="background-image: url('<%= image_path("material_kit/bg2.jpg") %>');"></div>
	<div class="main main-raised">
		<div class="section section-basic">
	    <div class="container">
        <h2 align = center>Title: <%= @page.title%></h2>
          <div class="well col-xs-8 col-xs-offset-2">
            <%if @page.user%>
              <ul class="listing">
                <div class="row center">
                  <div class=" col-xs-4 col-xs-offset-4">
                    <li><%= link_to gravatar_for(@page.user), user_path(@page.user)%></li>
                    <li class ="page-title"><%= link_to @page.user.username , user_path(@page.user)%></li>    
                    <li><small><%= pluralize(@page.user.pages.count, "page" )if @page.user.pages%></small></li>
                  </div>
                </div>
              </ul>
              <% end %>
            <h4 class="center description"><strong>Description</strong></h4>
            </hr>
            <%= simple_format(@page.description)%>
            <div class="page-actions">
              <% if logged_in && (current_user == @page.user || current_user.admin)%>
                <%= link_to "Edit This Article" ,edit_page_path(@page) , class:"btn btn-xs btn-primary"%>
                <%= link_to "Delete This Article" ,page_path(@page) , method:  :delete ,  
                                                  data:{confrim: "Are You Sure U Want Dlete this Article"},
                                                  class:"btn btn-xs btn-danger" %>
              <%end%>
              <%= link_to "Back to Articles" , pages_path , class:"btn btn-xs btn-success"%>
            </div>
          </div>
        </div>
      </div>
    </div>  

  
